<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header.ejs', {title: 'Path Finder'}) %>
    <link rel="stylesheet" href="/styles/bucketShow.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>
    <section class="divs">
    <div class="infoDiv">
    <h1 class="title"><%=Bucket.place%></h1>
    <p class="information"><strong>Timeline:</strong> <%=Bucket.date%></p>
    <p class="reason"><strong>Reason:</strong> <%=Bucket.reason%></p>
     <!--DELETE-->
     <form method="POST" action="/bucketlist/<%=Bucket._id%>?_method=DELETE">
     <input class="button" type="submit" value="Delete" id="delete">
     </form> 
     <!--EDIT-->
      <a href='/bucketList/<%=Bucket.id%>/edit'><button id="edit"class='button' type ='submit'>Edit</button></a>
    </div>
    <div class="imgDiv">
        <img src="<%=Bucket.photo%>">
    </div>
    </section>
    <%- include('./partials/footer.ejs') %>
</body>

</html>
