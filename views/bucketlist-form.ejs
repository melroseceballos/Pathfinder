<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header.ejs', {title: 'Path Finder'}) %>
    <link rel="stylesheet" href="/styles/bucketlist-form.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <h1 class="oh">Oh, The Paths You'll Find!</h1>


    <form method="POST" action="/bucketlist">
        <!-- Place -->
        <label for="place">Place:</label>
        <input type="text" id="place" name="place">
        <br>
        <!-- Date  -->
        <label for="date">Date:</label>
        <input type="text" id="date" name="date" >
        <br>
        <!-- Reason  -->
        <label for="reason">Reason:</label>
        <input type="text" id="reason" name="reason" value="I want to go there because...">
        <br>
        <!-- Completed  -->
        <label for="completed">Completed:</label>
        <select id="completed" name="completed" >
            <option value="true">true</option>
            <option value="false">false</option>
        </select>
        <br>
        <!-- Photo  -->
        <label for="photo">Photo (URL):</label>
        <input type="text" id="photo" name="photo">
        <br>
        <input type="submit" value="Create Bucketlist">
    </form>

    <%- include('./partials/footer.ejs') %>
</body>

</html>
 