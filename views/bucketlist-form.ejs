<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header.ejs', {title: 'Path Finder'}) %>
    <link rel="stylesheet" href="/styles/bucketlist-form.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <h1 class="oh">Oh, The Paths You'll Find!</h1>


    <form method="POST" action="/bucketlist">
        <!-- Destination -->
        <label for="place">Place:</label>
        <input type="text" id="place" name="place" required>
        <br>
        <!-- Date input -->
        <label for="data">Date:</label>
        <input type="text" id="date" name="date" required>
        <br>
        <!-- Reason input -->
        <label for="reason">Reason:</label>
        <input type="text" id="reason" name="reason" value="I want to go there because...">
        <br>
        <!-- Completed input -->
        <label for="completed">Completed:</label>
        <select id="completed" name="completed" required>
            <option value="True">True</option>
            <option value="False">False</option>
        </select>
        <br>
        <!-- Photo input -->
        <label for="photo">Photo (URL):</label>
        <input type="text" id="photo" name="photo" required>
        <br>
        <input type="create" value="Create Bucketlist">
    </form>

    <%- include('./partials/footer.ejs') %>
</body>

</html>
